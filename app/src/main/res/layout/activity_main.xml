<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="COVID MEDICINE"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_form"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp"
        android:hint="Name"
        android:padding="20dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_regno"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_username"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp"
        android:hint="Registration Number"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_regno"
        android:drawablePadding="20dp"
        android:hint="Age"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/et_gender"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_age"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp"
        android:hint="Gender"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="284dp" />

    <TextView
        android:id="@+id/vac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_gender"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:text="Are you vaccinated?"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/opt_vac"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vac"
        android:layout_marginStart="70dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Vaccinated" />

        <RadioButton
            android:id="@+id/radio22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Not Vaccinated" />
    </RadioGroup>

    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt_vac"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:text="Your Preferences"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/checkopts"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/check"
        android:layout_marginStart="70dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Injections" />

        <CheckBox
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Tablets" />

        <CheckBox
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Ayurvedic" />

        <CheckBox
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Homeo" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkopts"
        android:layout_centerHorizontal="true"
        android:text="Submit"/>

</RelativeLayout>